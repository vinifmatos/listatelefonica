<div class="container main-container">
  <div class="row">
    <div class="col-auto">
      <h1>Cadastro de Locais</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-auto mr-auto">
      <%= search_form_for @q, class: 'form-inline mb-3', id: 'form-busca-local' do |f| %>
        <div class="form-group">
          <%= f.label :nome %>
          <%= f.search_field :nome_cont, class: 'form-control ml-3 mr-3' %>
        </div>

        <div class="form-group">
          <%= f.label :telefone %>
          <%= f.search_field :telefone_cont, class: 'form-control ml-3 mr-3', id: 'campo-numero-telefone' %>
        </div>

        <div id="submit">
          <%= f.submit 'Buscar', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-auto mr-auto mb-3">
      <%= link_to 'Novo Local', new_cadastro_local_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= sort_link(@q, :nome, 'Nome', default_order: :asc) %></th>
        <th><%= sort_link(@q, :telefone, 'Telefone', default_order: :asc) %></th>
        <th style="text-align: center">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @locais.each do |local| %>
        <tr>
          <td><%= local.nome %></td>
          <td><%= local.telefone %></td>
          <td style="text-align: center">
            <%= link_to fa_icon('list'), [:cadastro, local], class: 'btn btn-primary btn-sm' %>
            <%= link_to fa_icon('pencil'), edit_cadastro_local_path(local), class: 'btn btn-primary btn-sm' %>
            <%= link_to fa_icon('trash'), [:cadastro, local], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination justify-content-center">
  <%= paginate @locais, theme: 'twitter-bootstrap-4' %>
</div>
