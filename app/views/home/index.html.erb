<div class="container main-container">
  <div class="card-deck">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Contatos</h5>

        <%= search_form_for @contatoq, url: busca_contatos_path do |f| %>
          <div class="form-group">
            <%= f.label :nome %>
            <%= f.search_field :nome_cont, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :numero %>
            <%= f.search_field :telefone_or_celular_cont, class: 'form-control' %>
          </div>

          <div id="submit">
            <%= f.submit 'Buscar', class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= link_to 'Ver todos', busca_contatos_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Departamentos</h5>

        <%= search_form_for @departamentoq, url: busca_departamentos_path do |f| %>
          <div class="form-group">
            <%= f.label :nome %>
            <%= f.search_field :nome_cont, class: 'form-control' %>
          </div>

          <div id="submit">
            <%= f.submit 'Buscar', class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= link_to 'Ver todos', busca_departamentos_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Locais</h5>

        <%= search_form_for @localq, url: busca_contatos_path do |f| %>
          <div class="form-group">
            <%= f.label :nome %>
            <%= f.search_field :nome_cont, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :telefone %>
            <%= f.search_field :telefone_cont, class: 'form-control' %>
          </div>

          <div id="submit">
            <%= f.submit 'Buscar', class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= link_to 'Ver todos', busca_locais_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
