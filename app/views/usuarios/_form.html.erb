<%= form_with(model: usuario, local: true) do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-auto">
      <%= form.label :login %>
      <%= form.text_field :login, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-auto">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-auto">
      <%= form.label :senha %>
      <%= form.password_field :password, autocomplete: false, class: 'form-control' %>
    </div>

    <div class="form-group col-auto">
      <%= form.label :confirmacao_senha %>
      <%= form.password_field :password_confirmation, autocomplete: false, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-auto">
      <%= form.label :acesso %>
      <%= form.select :acesso, acessos.keys.collect { |k| [k,k] }, { prompt: 'Selecione' }, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Salvar', class: 'btn btn-success' %>
    <%= link_to 'Voltar', :back, class: 'btn btn-primary' %>
  </div>
<% end %>
