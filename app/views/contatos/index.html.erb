<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Departamento</th>
      <th>Nome</th>
      <th>Telefone{10}</th>
      <th>Celular{11}</th>
      <th>Cargo</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.departamento %></td>
        <td><%= contato.nome %></td>
        <td><%= contato.telefone{10} %></td>
        <td><%= contato.celular{11} %></td>
        <td><%= contato.cargo %></td>
        <td><%= contato.ativo %></td>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

