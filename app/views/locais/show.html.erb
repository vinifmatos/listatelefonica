<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col-auto">
          <h1>Local</h1>
        </div>
        <div class="col-auto row ml-auto">
          <%= button_to 'Editar', edit_local_path(@local), method: :get, class: 'btn btn-primary col-auto mr-2', disabled: !cadastra? %>
          <%= button_to 'Voltar', locais_path, method: :get, class: 'btn btn-primary mr-3 col-auto' %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="form-row">
        <div class="form-group col-auto">
          <%= label_tag :nome %>
          <%= text_field_tag :nome, @local.nome, class: 'form-control', readonly: true %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-auto">
          <%= label_tag :telefone %>
          <%= text_field_tag :telefone, @local.telefone, class: 'form-control', readonly: true %>
        </div>
    </div>
  </div>
</div>
