<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col-auto">
          <h1>Local</h1>
        </div>
        <div class="col-auto ml-auto">
          <%= link_to 'Editar', edit_local_path(@local), class: 'btn btn-primary' %>
          <%= link_to 'Voltar', locais_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="form-row">
        <div class="form-group col-auto">
          <%= label_tag :nome %>
          <%= text_field_tag :nome, @local.nome, class: 'form-control', readonly: true %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-auto">
          <%= label_tag :telefone %>
          <%= text_field_tag :telefone, @local.telefone, class: 'form-control', readonly: true %>
        </div>
    </div>
  </div>
</div>
